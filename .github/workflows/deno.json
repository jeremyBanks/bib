{
  "on": [
    "push",
    "workflow_dispatch"
  ],
  "jobs": {
    "deploy": {
      "runs-on": "ubuntu-latest",
      "permissions": {
        "id-token": "write",
        "contents": "read"
      },
      "steps": [
        {
          "uses": "actions/checkout@v3"
        },
        {
          "uses": "denoland/deployctl@v1",
          "with": {
            "project": "fic",
            "root": "deno",
            "entrypoint": "main.ts",
            "import-map": "import_map.json"
          }
        }
      ]
    }
  }
}
